<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
    $('.answer-errors').html('<%= j message %>');
  <% end %>
<% else %>
    <% publish_to "/questions/#{@answer.question.id}" do %>
        $('.answers').append('<%= j render partial: 'questions/answer', object: @answer , as: 'answer' %>')
    <% end %>
<% end %>